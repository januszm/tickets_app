{{#bs-navbar type=(if inverse 'inverse') fluid=fluid as |navbar|}}
  <div class="container-fluid">
    <div class="navbar-header">
      {{#navbar.toggle}}
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      {{/navbar.toggle}}
      {{#link-to 'index' class="navbar-brand"}}
        Home
      {{/link-to}}
    </div>

    {{#navbar.content}}
      {{#navbar.nav as |nav|}}
        {{#if session.isAuthenticated}}
          {{#nav.item}}{{link-to 'Users' 'users'}}{{/nav.item}}
          {{#nav.item}}{{link-to 'Issues' 'issues'}}{{/nav.item}}
          {{#nav.item}}<a {{action 'invalidateSession'}}>Logout</a>{{/nav.item}}
        {{else}}
          <li>{{#link-to 'login'}}Login{{/link-to}}</li>
        {{/if}}
      {{/navbar.nav}}
    {{/navbar.content}}
  </div>
{{/bs-navbar}}

<div class="container-fluid">
  {{outlet}}
</div>

<h2>Assign support ticket</h2>

<div class='container'>
  <div class='row'>
    <div class='col-sm-8 col-12'>
      <form>
        <div class="form-horizontal">
          <div class="form-group">
            <div>
              Issue:
              {{model.issue.title}}
            </div>
            <div>
              Agent:
                <select>
                {{#each model.users as |agent|}}
                  <option value={{agent.id}}>{{agent.fullName}}</option>
                {{/each}}
              </select>
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button type="submit" class="btn btn-primary" {{action 'save' model.issue}}>Assign</button>
              <button {{action 'cancel' model}} class="btn">Cancel</button>
            </div>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
